button {
  outline: none;
  border: none;
}
page {
  font-family: Monospace;
}
.course-plus .header {
  padding: 20rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.course-plus .header .right-week {
  width: 190rpx;
  height: 70rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: #0497ff;
  color: #fff;
  border-radius: 20rpx;
}
.course-plus .header .right-week .uni-input {
  display: flex;
  align-items: center;
  justify-content: center;
}
.course-plus .header .right-week .uniui-down {
  margin-left: 10rpx;
}
.course-plus .header .right-week view {
  margin-right: 20rpx;
}
.course-plus .course-calendar {
  margin-top: 10rpx;
}
.course-plus .course-calendar .top-week-day {
  background-color: #fafafa;
  padding: 10rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  font-size: 24rpx;
  color: #333;
  padding-left: 60rpx;
}
.course-plus .course-calendar .top-week-day .week-day-item {
  width: 100rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: column;
}
.course-plus .course-calendar .content-main {
  padding: 10rpx;
  padding-top: 0;
  display: flex;
  align-items: flex-start;
  justify-content: flex-start;
}
.course-plus .course-calendar .content-main .left-section {
  font-size: 18rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  flex-direction: column;
  margin-right: 15rpx;
  height: 85vh;
}
.course-plus .course-calendar .content-main .left-section view {
  text-align: center;
}
.course-plus .course-calendar .content-main .left-section .section-item view:first-child {
  font-size: 22rpx;
  font-weight: bolder;
}
.course-plus .course-calendar .content-main .left-section .section-item:first-child {
  margin-top: 70rpx;
}
.course-plus .course-calendar .content-main .right-course-list {
  width: 90vw;
  position: relative;
  display: flex;
  align-items: center;
  justify-content: flex-start;
}
.course-plus .course-calendar .content-main .right-course-list .empty {
  width: 55rpx;
  height: 160rpx;
  padding: 15rpx;
  border-radius: 10rpx;
  font-size: 20rpx;
  background-color: #fff !important;
  border: 1px solid #c3d8ee !important;
  color: #6598d9 !important;
  display: flex;
  align-items: center;
  justify-content: center;
}
.course-plus .course-calendar .content-main .right-course-list .empty {
  margin-top: 25rpx;
}
.course-plus .course-calendar .content-main .right-course-list .course-list {
  width: 100rpx;
  height: 100%;
  position: relative;
  display: flex;
  align-items: center;
  justify-content: flex-start;
  flex-direction: column;
}
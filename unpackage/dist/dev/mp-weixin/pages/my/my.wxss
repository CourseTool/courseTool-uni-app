button {
  outline: none;
  border: none;
}
page {
  font-family: Monospace;
}
page > .content {
  height: 100vh;
  background-color: #f3f3f3;
}
page > .content .header {
  height: 250rpx;
  background-color: #244fc7;
  padding: 20rpx;
}
page > .content .header .user-info-box {
  width: 85vw;
  height: 300rpx;
  position: absolute;
  top: 70rpx;
  left: 50%;
  transform: translateX(-50%);
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: #fff;
  border-radius: 20rpx;
}
page > .content .header .user-info-box .user-info {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
}
page > .content .header .user-info-box .user-info > view {
  margin: 5rpx 0;
}
page > .content .header .user-info-box .user-info .user-name {
  font-size: 36rpx;
  color: #000;
  font-weight: bold;
}
page > .content .header .user-info-box .user-info .user-class {
  font-size: 20rpx;
  color: #333;
}
page > .content .header .user-info-box .user-info .user-pic image {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  border: 1px solid #ccc;
}
page > .content .fn-list {
  width: 85vw;
  background-color: #fff;
  margin: 0 auto;
  margin-top: 100rpx;
  border-radius: 20rpx;
}
page > .content .fn-list .content {
  padding: 10rpx 20rpx;
}
page > .content .fn-list .content .list {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
}
page > .content .fn-list .content .list > .fn:not(:last-child) {
  border-bottom: 1px solid #f3f3f3;
}
page > .content .fn-list .content .list .fn {
  width: 100%;
  height: 100rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
page > .content .fn-list .content .list .fn .left-title {
  display: flex;
  align-items: center;
}
page > .content .fn-list .content .list .fn .left-title .title {
  margin-left: 10rpx;
  font-size: 28rpx;
}
page > .content .fn-list .content .list .fn .val {
  font-size: 28rpx;
  color: #0497FF;
  text-decoration: underline;
}
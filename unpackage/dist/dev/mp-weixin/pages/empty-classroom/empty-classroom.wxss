button {
  outline: none;
  border: none;
}
page {
  font-family: Monospace;
}
.electives {
  padding: 20rpx 0;
}
.electives .title {
  text-align: center;
  font-size: 50rpx;
}
.electives .time {
  text-align: center;
  font-size: 34rpx;
  margin: 20rpx 0;
}
.electives .tips {
  font-size: 30rpx;
  margin: 20rpx 0;
  color: #333;
  display: flex;
  align-items: center;
  justify-content: center;
}
.electives .tips text {
  color: #0497FF;
}
.electives .input-list {
  width: 90vw;
  margin: 0 auto;
  margin-top: 40rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  font-size: 34rpx;
  text-decoration: underline;
  color: #0497FF;
}
.electives .input-list view {
  width: 200rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
.electives .search {
  margin: 0 auto;
  margin-top: 30rpx;
  width: 200rpx;
  height: 70rpx;
  background: #0497FF;
  color: #fff;
  font-size: 32rpx;
  text-align: center;
  line-height: 70rpx;
  border-radius: 10rpx;
}
.electives .course {
  width: 85vw;
  padding: 5px;
  border-radius: 10rpx;
  margin: 0 auto;
  margin-top: 30rpx;
  font-size: 30rpx;
  background-color: #e9f3fb;
  border: 1px solid #c3d8ee;
}
.electives .course .title {
  font-size: 32rpx;
  color: #000;
  padding-bottom: 20rpx;
  border-bottom: 2px solid #0497FF;
}
.electives .course > view {
  color: #333;
  margin: 10px;
  display: flex;
  align-items: flex-start;
  justify-content: flex-start;
}
.electives .course > view view {
  font-weight: bold;
  margin-right: 15rpx;
  width: -webkit-fit-content;
  width: fit-content;
  word-break: keep-all;
}
.electives .empty {
  margin-top: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 44rpx;
  color: #0497FF;
}
.electives .inject {
  width: 180rpx;
  height: 70rpx;
  background: #34A853;
  border-radius: 10rpx;
  color: #fff;
  margin: 0 auto;
  text-align: center;
  line-height: 70rpx;
  margin-top: 30rpx;
  font-size: 24rpx;
}
.electives .injected-count {
  margin: 10rpx 0;
  text-align: center;
}
.electives .remove {
  width: 180rpx;
  height: 70rpx;
  background: #EA4335;
  border-radius: 10rpx;
  color: #fff;
  margin: 0 auto;
  text-align: center;
  line-height: 70rpx;
  margin-top: 30rpx;
  font-size: 24rpx;
}
button {
  outline: none;
  border: none;
}
page {
  font-family: Monospace;
}
.lovers-course {
  min-height: 100vh;
  padding-bottom: 30rpx;
  background-color: #fbeded;
}
.lovers-course .header {
  padding: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: #f3f3f3;
}
.lovers-course .header .icon {
  width: -webkit-fit-content;
  width: fit-content;
  margin: 0 20rpx;
}
.lovers-course .header > view {
  width: 280rpx;
  display: flex;
  align-items: center;
  word-break: keep-all;
}
.lovers-course .header .male {
  justify-content: flex-end;
  color: #6598d9;
}
.lovers-course .header .female {
  justify-content: flex-start;
  color: #f286e5;
}
.lovers-course .date {
  margin-top: 20rpx;
  padding: 20rpx;
  font-size: 34rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #333;
  font-size: 44rpx;
  font-weight: bolder;
  letter-spacing: 5rpx;
}
.lovers-course .date .week {
  font-size: 30rpx;
}
.lovers-course .course-list {
  padding: 0 20rpx;
  display: flex;
  justify-content: space-between;
  flex-direction: column;
  margin-top: 20rpx;
}
.lovers-course .course-list .course-item {
  margin-top: 30rpx;
  width: 94vw;
}
.lovers-course .course-list .course-item .course:first-child .bottom-course {
  margin-top: 20rpx;
}
.lovers-course .course-list .course-item .course {
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: column;
}
.lovers-course .course-list .course-item .course .top-index {
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: column;
  color: #333;
  margin-right: 20rpx;
  font-weight: bold;
}
.lovers-course .course-list .course-item .course .top-index > view {
  width: -webkit-fit-content;
  width: fit-content;
  word-break: keep-all;
}
.lovers-course .course-list .course-item .course .top-index .time {
  color: #3c3c3c;
  font-size: 24rpx;
}
.lovers-course .course-list .course-item .course .bottom-course {
  width: 68vw;
  padding: 10rpx 15rpx;
  background-color: #e9f3fb;
  border-radius: 10rpx;
  border: 1px solid #c3d8ee;
  position: relative;
}
.lovers-course .course-list .course-item .course .bottom-course .icon {
  margin: 0;
  position: absolute;
  top: 0;
  left: 50%;
  transform: translate(-50%, -50%);
  z-index: 1;
}
.lovers-course .course-list .course-item .course .bottom-course > view {
  margin: 10rpx 0;
  display: flex;
  align-items: flex-start;
  justify-content: flex-start;
  color: #6598d9;
}
.lovers-course .course-list .course-item .course .bottom-course > view .title {
  font-size: 30rpx;
  font-weight: bold;
  margin-right: 10rpx;
  width: -webkit-fit-content;
  width: fit-content;
  word-break: keep-all;
}
.lovers-course .course-list .course-item .course .bottom-course > view .value {
  font-size: 30rpx;
}
.lovers-course .course-list .course-item .course .female {
  background-color: #ffddee;
  border-color: #ffcce1;
}
.lovers-course .course-list .course-item .course .female > view {
  color: #f286e5;
}
.lovers-course .empty {
  margin-top: 36rpx;
  text-align: center;
  font-size: 34rpx;
  color: #0497ff;
}
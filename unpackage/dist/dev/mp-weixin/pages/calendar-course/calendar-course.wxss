button {
  outline: none;
  border: none;
}
page {
  font-family: Monospace;
}
.header {
  padding: 20rpx;
  font-size: 40rpx;
  font-weight: bold;
  color: #6598d9;
  display: flex;
  align-items: center;
  justify-content: center;
  letter-spacing: 2rpx;
}
.course-list {
  margin: 0 auto;
  padding: 20rpx 0;
  width: 95vw;
  border-top: 1px solid #ccc;
}
.course-list > .title {
  font-size: 36rpx;
  font-weight: bold;
  margin: 30rpx 0;
  text-align: center;
  letter-spacing: 2rpx;
}
.course-list .course-item {
  margin: 20rpx 0;
  display: flex;
  align-items: center;
  justify-content: flex-start;
}
.course-list .course-item .left-index {
  flex-basis: 21%;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: column;
  color: #333;
  margin-right: 20rpx;
}
.course-list .course-item .left-index > view {
  width: -webkit-fit-content;
  width: fit-content;
  word-break: keep-all;
}
.course-list .course-item .left-index .time {
  color: #3c3c3c;
  font-size: 22rpx;
}
.course-list .course-item .right-course {
  flex-basis: 78%;
  color: #6598d9;
  padding: 20rpx;
  background-color: #e9f3fb;
  border-radius: 10rpx;
  border: 1px solid #c3d8ee;
}
.course-list .course-item .right-course > view {
  display: flex;
  align-items: flex-start;
  justify-content: flex-start;
}
.course-list .course-item .right-course .title {
  font-size: 30rpx;
  font-weight: bold;
  margin-right: 10rpx;
  width: -webkit-fit-content;
  width: fit-content;
  word-break: keep-all;
}
.course-list .course-item .right-course .value {
  font-size: 30rpx;
}
.course-list .empty {
  font-size: 40rpx;
  font-weight: bold;
  margin-top: 50rpx;
  color: #6598d9;
  text-align: center;
}
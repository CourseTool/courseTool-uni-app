button {
  outline: none;
  border: none;
}
page {
  font-family: Monospace;
}
.course {
  height: 100vh;
  overflow-x: hidden;
}
.course .course-tools {
  display: flex;
  align-items: center;
  justify-content: center;
  flex-wrap: wrap;
  flex-direction: column;
  font-size: 28rpx;
}
.course .course-tools .class {
  width: 100vw;
  padding: 30rpx 0;
  display: flex;
  align-items: center;
  justify-content: flex-start;
  font-weight: bold;
  background-color: #f5f5f5;
  letter-spacing: 1rpx;
  cursor: pointer;
}
.course .course-tools .class .title {
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 20rpx;
}
.course .course-tools .class > label {
  margin: 0 10rpx;
}
.course .course-content {
  width: 95%;
  height: 80vh;
  display: flex;
  align-items: flex-start;
  justify-content: flex-end;
  margin: 0 auto;
  margin-top: 20rpx;
}
.course .course-content .empty {
  width: 100vw;
  display: flex;
  align-items: flex-start;
  justify-content: center;
  padding: 20rpx;
  font-size: 36rpx;
}
.course .course-content .course-list {
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-wrap: wrap;
}
.course .course-content .course-list .course-item {
  width: 100%;
  padding: 5px;
  border-radius: 10rpx;
  margin: 10px;
  font-size: 30rpx;
  background-color: #e9f3fb;
  border: 1px solid #c3d8ee;
}
.course .course-content .course-list .course-item .title {
  font-size: 34rpx;
  color: #000;
  padding-bottom: 20rpx;
  border-bottom: 2px solid #0497FF;
  align-items: center;
}
.course .course-content .course-list .course-item > view {
  color: #333;
  margin: 10px;
  display: flex;
  align-items: flex-start;
  justify-content: flex-start;
}
.course .course-content .course-list .course-item > view view {
  font-weight: bolder;
  margin-right: 15rpx;
  color: #333;
  width: -webkit-fit-content;
  width: fit-content;
  word-break: keep-all;
}
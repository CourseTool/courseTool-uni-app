button {
  outline: none;
  border: none;
}
page {
  font-family: Monospace;
}
.home-course {
  margin-top: 50rpx;
  padding-bottom: 30rpx;
}
.home-course .course-update-time {
  margin-top: 40rpx;
  letter-spacing: 1px;
  font-weight: bold;
  text-align: center;
  font-size: 20rpx;
}
.home-course > .title {
  font-size: 44rpx;
  letter-spacing: 1px;
  font-weight: bold;
  text-align: center;
  margin-top: 30rpx;
}
.home-course .course-list {
  display: flex;
  align-items: center;
  justify-content: space-between;
  flex-direction: column;
}
.home-course .course-list .course-item {
  margin-top: 30rpx;
  width: 95vw;
  display: flex;
  align-items: center;
  justify-content: center;
}
.home-course .course-list .course-item .left-index {
  width: 25%;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: column;
  color: #666;
  margin-right: 15rpx;
}
.home-course .course-list .course-item .left-index > view {
  font-size: 24rpx;
  font-weight: bold;
  width: -webkit-fit-content;
  width: fit-content;
  display: flex;
  flex-direction: column;
}
.home-course .course-list .course-item .left-index > view view {
  word-break: keep-all;
}
.home-course .course-list .course-item .left-index .time {
  color: #3c3c3c;
  font-size: 24rpx;
}
.home-course .course-list .course-item .right-course {
  width: 68vw;
  padding: 10rpx 15rpx;
  background-color: #e9f3fb;
  border-radius: 10rpx;
  border: 1px solid #c3d8ee;
}
.home-course .course-list .course-item .right-course > view {
  margin: 10rpx 0;
  display: flex;
  align-items: center;
  justify-content: flex-start;
  color: #6598d9;
  line-height: 40rpx;
}
.home-course .course-list .course-item .right-course > view .title {
  font-size: 30rpx;
  font-weight: bold;
  margin-right: 10rpx;
  width: -webkit-fit-content;
  width: fit-content;
  word-break: keep-all;
}
.home-course .course-list .course-item .right-course > view .value {
  font-size: 30rpx;
}
.home-course .course-list .course-item .right-course .name {
  align-items: flex-start;
}
.home-course .empty {
  margin-top: 36rpx;
  text-align: center;
  font-size: 34rpx;
  color: #0497ff;
}